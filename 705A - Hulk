#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;cin>>n;
    string s1="I hate ";
    string s2="I love ";
    string s3= "that ";
    string s4="it";
    string s;
    for(int i=1;i<=n;i++){
        if( i==1){
         s+=s1;
        }else if  (i%2!=0){
           s+=s3+s1;
        }else   s+=s3+s2;
    }
    cout<<s+s4 <<endl;

    return 0;
}
